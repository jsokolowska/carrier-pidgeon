<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ConversationController">
    <children>
        <MenuBar fx:id="menuBar" style="-fx-background-color: lightgray;" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="General">
                    <items>
                        <MenuItem fx:id="menuHome" mnemonicParsing="false" onAction="#goHome" text="Home" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="menuLogOut" mnemonicParsing="false" onAction="#logOut" text="Log out" />
                        <MenuItem fx:id="menuQuit" mnemonicParsing="false" onAction="#quit" text="Quit" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox layoutX="10.0" layoutY="10.0" prefHeight="410.0" prefWidth="650.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Label fx:id="conversationLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="640.0" style="-fx-background-color: white; -fx-border-color: lightgray;" text="Your conversation with" textAlignment="CENTER">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ScrollPane fitToHeight="true" prefHeight="240.0" prefWidth="640.0">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <VBox fx:id="messageBox" prefHeight="198.0" prefWidth="638.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </ScrollPane>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextArea fx:id="messageText" onKeyPressed="#onEnter" prefHeight="100.0" prefWidth="560.0" promptText="Write your message here...">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </HBox.margin>
                                </TextArea>
                                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMsg" prefHeight="62.0" prefWidth="100.0" text="Send" textFill="#070707">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
