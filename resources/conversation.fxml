<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ConversationController">
    <children>
        <MenuBar fx:id="menuBar" prefHeight="29.0" prefWidth="110.0" style="-fx-background-color: #ffcc66;" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="General">
                    <items>
                        <MenuItem fx:id="menuHome" mnemonicParsing="false" onAction="#goHome" text="Home" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="menuLogOut" mnemonicParsing="false" onAction="#logOut" text="Log out" />
                        <MenuItem fx:id="menuQuit" mnemonicParsing="false" onAction="#quit" text="Quit" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox layoutX="10.0" layoutY="10.0" prefHeight="410.0" prefWidth="650.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="conversationLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="37.0" prefWidth="655.0" style="-fx-background-color: #ffeecc;" text="Your conversation with" textAlignment="CENTER" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ScrollPane fitToHeight="true" prefHeight="240.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
                            <content>
                                <AnchorPane>
                           <children>
                                        <VBox fx:id="messageBox" alignment="TOP_RIGHT" layoutX="-1.0" prefHeight="244.0" prefWidth="660.0" />
                           </children></AnchorPane>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
            <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: whitesmoke;" VBox.vgrow="NEVER">
                <children>
                    <TextArea fx:id="messageText" onKeyPressed="#onEnter" prefHeight="100.0" prefWidth="560.0" promptText="Write your message here..." HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                    </TextArea>
                    <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMsg" prefHeight="62.0" prefWidth="100.0" style="-fx-background-color: #ffcc66;" text="Send" textFill="#070707" HBox.hgrow="NEVER">
                        <HBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                    </Button>
                </children>
            </HBox>
    </children>
</VBox>
